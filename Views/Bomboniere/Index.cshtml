@model IEnumerable<ProjetoCinema.Models.Bomboniere>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <div>
        @using (Html.BeginForm("Index", "Bomboniere", FormMethod.Get))
        {
            <p>
                Digite aqui sua pesquisa: @Html.TextBox("Pesquisa")
                <input type="submit" value="Pesquisar" />
            </p>
        }
    </div> 

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pipocas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bebidas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guloseimas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pipocas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bebidas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guloseimas)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
